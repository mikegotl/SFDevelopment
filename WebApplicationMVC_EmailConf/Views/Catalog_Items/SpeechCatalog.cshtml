    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Package Name</th>
                <th>Description</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(n => n.Ordinal).OrderBy(o => o.Catalog.Ordinal))
            {
                <tr>
                    <td>@item.Catalog.Name</td>
                    <td>@item.Name</td>
                    <td>@Html.Raw(item.Description)</td>
                    <td>@String.Format("{0:c}", item.Price)</td>
                    <td>
                        <button class="btn btn-primary" onclick="javascript:window.location=('@Url.Action("AddToCart", "Cart_Items", new { Catalog_ItemID = @item.Catalog_ItemID })')">
                            Add to Cart
                        </button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    @using (Html.BeginForm("ProcessPromo", "Cart_Items"))
    {
        <div class="form-inline">
            <div class="form-group">
                <input type="text" class="form-control" id="promo" name="promo" placeholder="Promo Code">
            </div>

            <button type="submit" class="btn btn-default">Process Promo Code</button>
        </div>
        
    }
</div>

<div class="clearfix"></div>
